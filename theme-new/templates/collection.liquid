{%- comment -%}
  Enhanced Collection Page with Filters, Sorting, Grid/List Toggle
{%- endcomment -%}

{% render 'structured-data', type: 'collection', collection: collection %}

<div class="collection-page section" data-collection-page>
  <div class="page-width">
    {%- if collection.image != blank -%}
      <div class="collection-banner">
        <img 
          src="{{ collection.image | image_url: width: 1920 }}"
          srcset="{{ collection.image | image_url: width: 960 }} 960w,
                  {{ collection.image | image_url: width: 1920 }} 1920w"
          sizes="100vw"
          alt="{{ collection.title | escape }}"
          class="collection-banner__image"
          loading="eager"
        >
        <div class="collection-banner__overlay"></div>
        <div class="collection-banner__content">
          <h1 class="collection-banner__title">{{ collection.title }}</h1>
          {%- if collection.description != blank -%}
            <p class="collection-banner__description">{{ collection.description }}</p>
          {%- endif -%}
        </div>
      </div>
    {%- else -%}
      <h1 class="collection-page__title">{{ collection.title }}</h1>
      {%- if collection.description != blank -%}
        <div class="collection-page__description">{{ collection.description }}</div>
      {%- endif -%}
    {%- endif -%}

    <div class="collection-page__toolbar">
      <div class="collection-page__toolbar-left">
        <button class="collection-page__filter-toggle" data-filter-toggle aria-label="{{ 'collections.filters.title' | t }}">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M3 6H21M6 12H18M9 18H15" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
          </svg>
          {{ 'collections.filters.title' | t }}
        </button>
        <div class="collection-page__count" data-collection-count>
          {{ collection.products_count }} {{ 'collections.general.products' | t }}
        </div>
      </div>
      <div class="collection-page__toolbar-right">
        <div class="collection-page__view-toggle">
          <button class="collection-page__view-btn collection-page__view-btn--grid active" data-view="grid" aria-label="{{ 'collections.general.grid_view' | t }}">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <rect x="3" y="3" width="7" height="7" stroke="currentColor" stroke-width="2"/>
              <rect x="14" y="3" width="7" height="7" stroke="currentColor" stroke-width="2"/>
              <rect x="3" y="14" width="7" height="7" stroke="currentColor" stroke-width="2"/>
              <rect x="14" y="14" width="7" height="7" stroke="currentColor" stroke-width="2"/>
            </svg>
          </button>
          <button class="collection-page__view-btn collection-page__view-btn--list" data-view="list" aria-label="{{ 'collections.general.list_view' | t }}">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M3 6H21M3 12H21M3 18H21" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
            </svg>
          </button>
        </div>
        <select class="collection-page__sort" data-collection-sort aria-label="{{ 'collections.sorting.title' | t }}">
          <option value="manual">{{ 'collections.sorting.featured' | t }}</option>
          <option value="price-ascending">{{ 'collections.sorting.price_ascending' | t }}</option>
          <option value="price-descending">{{ 'collections.sorting.price_descending' | t }}</option>
          <option value="title-ascending">{{ 'collections.sorting.az' | t }}</option>
          <option value="title-descending">{{ 'collections.sorting.za' | t }}</option>
          <option value="created-ascending">{{ 'collections.sorting.date_ascending' | t }}</option>
          <option value="created-descending">{{ 'collections.sorting.date_descending' | t }}</option>
        </select>
      </div>
    </div>

    <div class="collection-page__content">
      <aside class="collection-page__filters" data-collection-filters>
        <div class="collection-page__filters-header">
          <h2 class="collection-page__filters-title">{{ 'collections.filters.title' | t }}</h2>
          <button class="collection-page__filters-close" data-filter-close aria-label="{{ 'general.accessibility.close' | t }}">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M18 6L6 18M6 6L18 18" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
            </svg>
          </button>
        </div>
        <div class="collection-page__filters-body">
          {%- comment -%} Price Filter {%- endcomment -%}
          <div class="collection-page__filter-group">
            <h3 class="collection-page__filter-title">{{ 'collections.filters.price' | t }}</h3>
            <div class="collection-page__price-range" data-price-filter>
              <input type="range" min="0" max="1000" value="0" class="collection-page__price-slider" data-price-min>
              <input type="range" min="0" max="1000" value="1000" class="collection-page__price-slider" data-price-max>
              <div class="collection-page__price-display">
                <span data-price-min-display>$0</span> - <span data-price-max-display>$1000+</span>
              </div>
            </div>
          </div>
          {%- comment -%} Availability Filter {%- endcomment -%}
          <div class="collection-page__filter-group">
            <h3 class="collection-page__filter-title">{{ 'collections.filters.availability' | t }}</h3>
            <label class="collection-page__filter-checkbox">
              <input type="checkbox" data-filter-availability value="in_stock">
              <span>{{ 'collections.filters.in_stock' | t }}</span>
            </label>
            <label class="collection-page__filter-checkbox">
              <input type="checkbox" data-filter-availability value="out_of_stock">
              <span>{{ 'collections.filters.out_of_stock' | t }}</span>
            </label>
          </div>
          <button class="collection-page__filter-apply button button--primary" data-filter-apply>
            {{ 'collections.filters.apply' | t }}
          </button>
          <button class="collection-page__filter-clear" data-filter-clear>
            {{ 'collections.filters.clear' | t }}
          </button>
        </div>
      </aside>

      <div class="collection-page__products">
        <div class="collection-page__grid collection-page__grid--grid" data-collection-grid>
          {%- for product in collection.products -%}
            {% render 'product-card', product: product %}
          {%- else -%}
            <p class="collection-page__empty">{{ 'collections.general.no_products' | t }}</p>
          {%- endfor -%}
        </div>
        {%- comment -%} Load More Button {%- endcomment -%}
        {%- if paginate.next -%}
          <div class="collection-page__load-more">
            <button class="button button--secondary" data-load-more>
              {{ 'collections.general.load_more' | t }}
            </button>
          </div>
        {%- endif -%}
      </div>
    </div>
  </div>
</div>

{% render 'skeleton-loader', type: 'collection-grid' %}

<style>
  .collection-banner {
    position: relative;
    height: 400px;
    margin-bottom: var(--space-4xl);
    border-radius: var(--radius-xl);
    overflow: hidden;
  }

  .collection-banner__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .collection-banner__overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(to bottom, rgba(26, 26, 26, 0.3), rgba(26, 26, 26, 0.6));
  }

  .collection-banner__content {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: var(--space-3xl);
    color: var(--color-white);
    z-index: 2;
  }

  .collection-banner__title {
    font-size: var(--font-size-h1-mobile);
    line-height: var(--line-height-h1-mobile);
    color: var(--color-white);
    margin-bottom: var(--space-md);
  }

  @media (min-width: 768px) {
    .collection-banner__title {
      font-size: var(--font-size-h1-desktop);
      line-height: var(--line-height-h1-desktop);
    }
  }

  .collection-banner__description {
    font-size: var(--font-size-body-large);
    color: rgba(255, 255, 255, 0.9);
  }

  .collection-page__title {
    font-size: var(--font-size-h1-mobile);
    line-height: var(--line-height-h1-mobile);
    margin-bottom: var(--space-lg);
  }

  @media (min-width: 768px) {
    .collection-page__title {
      font-size: var(--font-size-h1-desktop);
      line-height: var(--line-height-h1-desktop);
    }
  }

  .collection-page__description {
    margin-bottom: var(--space-3xl);
    font-size: var(--font-size-body-large);
    line-height: var(--line-height-body-large);
  }

  .collection-page__toolbar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--space-2xl);
    padding: var(--space-lg);
    background: var(--color-off-white);
    border-radius: var(--radius-lg);
    flex-wrap: wrap;
    gap: var(--space-md);
  }

  .collection-page__toolbar-left,
  .collection-page__toolbar-right {
    display: flex;
    align-items: center;
    gap: var(--space-lg);
  }

  .collection-page__filter-toggle {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    padding: var(--space-sm) var(--space-lg);
    background: var(--color-white);
    border: 1px solid var(--color-border-gray);
    border-radius: var(--radius-md);
    cursor: pointer;
    font-size: var(--font-size-body);
    transition: all var(--duration-fast) var(--ease-in-out);
  }

  .collection-page__filter-toggle:hover {
    border-color: var(--color-accent);
    color: var(--color-accent);
  }

  .collection-page__count {
    font-size: var(--font-size-body);
    color: var(--color-text-secondary);
  }

  .collection-page__view-toggle {
    display: flex;
    gap: var(--space-xs);
    border: 1px solid var(--color-border-gray);
    border-radius: var(--radius-md);
    padding: var(--space-xs);
    background: var(--color-white);
  }

  .collection-page__view-btn {
    padding: var(--space-sm);
    background: none;
    border: none;
    cursor: pointer;
    color: var(--color-text-secondary);
    transition: all var(--duration-fast) var(--ease-in-out);
    border-radius: var(--radius-sm);
  }

  .collection-page__view-btn.active,
  .collection-page__view-btn:hover {
    background: var(--color-accent);
    color: var(--color-white);
  }

  .collection-page__sort {
    padding: var(--space-sm) var(--space-lg);
    border: 1px solid var(--color-border-gray);
    border-radius: var(--radius-md);
    font-size: var(--font-size-body);
    background: var(--color-white);
    cursor: pointer;
  }

  .collection-page__content {
    display: grid;
    grid-template-columns: 280px 1fr;
    gap: var(--space-2xl);
  }

  @media (max-width: 1023px) {
    .collection-page__content {
      grid-template-columns: 1fr;
    }

    .collection-page__filters {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      max-width: 400px;
      height: 100vh;
      background: var(--color-white);
      z-index: 1000;
      transform: translateX(-100%);
      transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      box-shadow: var(--shadow-xl);
      overflow-y: auto;
    }

    .collection-page__filters.active {
      transform: translateX(0);
    }
  }

  .collection-page__filters-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: var(--space-xl);
    border-bottom: 1px solid var(--color-border-gray);
  }

  .collection-page__filters-title {
    font-size: var(--font-size-h3);
    margin: 0;
  }

  .collection-page__filters-close {
    background: none;
    border: none;
    padding: var(--space-sm);
    cursor: pointer;
    display: none;
  }

  @media (max-width: 1023px) {
    .collection-page__filters-close {
      display: block;
    }
  }

  .collection-page__filters-body {
    padding: var(--space-xl);
  }

  .collection-page__filter-group {
    margin-bottom: var(--space-2xl);
  }

  .collection-page__filter-title {
    font-size: var(--font-size-body);
    font-weight: var(--font-weight-semibold);
    margin-bottom: var(--space-md);
  }

  .collection-page__filter-checkbox {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    margin-bottom: var(--space-sm);
    cursor: pointer;
  }

  .collection-page__filter-checkbox input {
    width: 18px;
    height: 18px;
    cursor: pointer;
  }

  .collection-page__grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-lg);
  }

  .collection-page__grid--list {
    grid-template-columns: 1fr;
  }

  .collection-page__grid--list .product-card {
    display: flex;
    flex-direction: row;
    gap: var(--space-lg);
  }

  .collection-page__grid--list .product-card__image-wrapper {
    width: 200px;
    flex-shrink: 0;
  }

  @media (min-width: 640px) {
    .collection-page__grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .collection-page__grid {
      grid-template-columns: repeat(4, 1fr);
      gap: var(--space-xl);
    }
  }

  .collection-page__empty {
    grid-column: 1 / -1;
    text-align: center;
    padding: var(--space-4xl);
    color: var(--color-text-secondary);
  }

  .collection-page__load-more {
    text-align: center;
    margin-top: var(--space-4xl);
  }
</style>

