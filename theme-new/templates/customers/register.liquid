{% comment %}
  Customer Registration Page
{% endcomment %}

<div class="customer-register section">
  <div class="page-width">
    <div class="customer-register__container">
      <h1 class="customer-register__title">{{ 'customer.register.title' | t }}</h1>

      {%- form 'create_customer', class: 'customer-register__form' -%}
        {%- if form.errors -%}
          <div class="customer-register__errors">
            {{ form.errors | default_errors }}
          </div>
        {%- endif -%}

        <div class="customer-register__field">
          <label for="RegisterFirstName" class="customer-register__label">
            {{ 'customer.register.first_name' | t }}
          </label>
          <input
            type="text"
            name="customer[first_name]"
            id="RegisterFirstName"
            class="customer-register__input"
            autocomplete="given-name"
            {% if form.first_name %}value="{{ form.first_name }}"{% endif %}
          >
        </div>

        <div class="customer-register__field">
          <label for="RegisterLastName" class="customer-register__label">
            {{ 'customer.register.last_name' | t }}
          </label>
          <input
            type="text"
            name="customer[last_name]"
            id="RegisterLastName"
            class="customer-register__input"
            autocomplete="family-name"
            {% if form.last_name %}value="{{ form.last_name }}"{% endif %}
          >
        </div>

        <div class="customer-register__field">
          <label for="RegisterEmail" class="customer-register__label">
            {{ 'customer.register.email' | t }}
          </label>
          <input
            type="email"
            name="customer[email]"
            id="RegisterEmail"
            class="customer-register__input"
            autocomplete="email"
            {% if form.email %}value="{{ form.email }}"{% endif %}
            required
          >
        </div>

        <div class="customer-register__field">
          <label for="RegisterPassword" class="customer-register__label">
            {{ 'customer.register.password' | t }}
          </label>
          <input
            type="password"
            name="customer[password]"
            id="RegisterPassword"
            class="customer-register__input"
            autocomplete="new-password"
            required
          >
        </div>

        <div class="customer-register__actions">
          <button type="submit" class="button button--primary">
            {{ 'customer.register.submit' | t }}
          </button>
        </div>

        <div class="customer-register__login">
          <p>
            {{ 'customer.register.have_account' | t }}
            <a href="{{ routes.account_login_url }}">{{ 'customer.login.title' | t }}</a>
          </p>
        </div>
      {%- endform -%}
    </div>
  </div>
</div>

<style>
  .customer-register {
    padding: var(--space-4xl) 0;
    min-height: 60vh;
  }

  .customer-register__container {
    max-width: 500px;
    margin: 0 auto;
  }

  .customer-register__title {
    font-size: var(--font-size-h1-mobile);
    line-height: var(--line-height-h1-mobile);
    margin-bottom: var(--space-3xl);
    text-align: center;
    color: var(--color-text-primary);
  }

  @media (min-width: 768px) {
    .customer-register__title {
      font-size: var(--font-size-h1-desktop);
      line-height: var(--line-height-h1-desktop);
    }
  }

  .customer-register__field {
    margin-bottom: var(--space-xl);
  }

  .customer-register__label {
    display: block;
    margin-bottom: var(--space-sm);
    font-weight: var(--font-weight-medium);
    color: var(--color-text-primary);
  }

  .customer-register__input {
    width: 100%;
    padding: var(--space-md);
    border: 1px solid var(--color-border-gray);
    border-radius: var(--radius-md);
    font-size: var(--font-size-body);
    font-family: inherit;
    transition: border-color var(--duration-fast) var(--ease-in-out);
  }

  .customer-register__input:focus {
    outline: none;
    border-color: var(--color-accent);
    box-shadow: 0 0 0 3px rgba(124, 152, 133, 0.1);
  }

  .customer-register__actions {
    margin-bottom: var(--space-lg);
  }

  .customer-register__errors {
    background: var(--color-error);
    color: white;
    padding: var(--space-md);
    border-radius: var(--radius-md);
    margin-bottom: var(--space-xl);
  }

  .customer-register__login {
    text-align: center;
    padding-top: var(--space-xl);
    border-top: 1px solid var(--color-border-gray);
  }

  .customer-register__login a {
    color: var(--color-accent);
    text-decoration: none;
  }

  .customer-register__login a:hover {
    text-decoration: underline;
  }
</style>

