{% comment %}
  Terms of Service Page Template
  Shopify recognizes this as a policy page
{% endcomment %}

<div class="policy-page section">
  <div class="page-width">
    <div class="policy-page__header">
      <h1 class="policy-page__title">{{ page.title | default: 'Terms of Service' }}</h1>
      <p class="policy-page__updated">
        {%- if page.published_at -%}
          Last updated: {{ page.published_at | date: "%B %d, %Y" }}
        {%- else -%}
          Last updated: {{ 'now' | date: "%B %d, %Y" }}
        {%- endif -%}
      </p>
    </div>

    <div class="policy-page__content rte">
      {%- if page.content != blank -%}
        {{ page.content }}
      {%- else -%}
        {%- comment -%} Default placeholder content {%- endcomment -%}
        <div class="policy-page__default-content">
          <h2>1. Agreement to Terms</h2>
          <p>By accessing or using Glowify's website and services, you agree to be bound by these Terms of Service and all applicable laws and regulations. If you do not agree with any of these terms, you are prohibited from using or accessing this site.</p>

