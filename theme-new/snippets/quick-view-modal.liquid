{%- comment -%}
  Quick View Modal Component
  Shows product details in a modal without leaving the page
{%- endcomment -%}

<div class="quick-view-modal" id="quick-view-modal" aria-hidden="true" role="dialog" aria-labelledby="quick-view-title">
  <div class="quick-view-modal__overlay" data-quick-view-close></div>
  <div class="quick-view-modal__content">
    <button class="quick-view-modal__close" data-quick-view-close aria-label="{{ 'general.accessibility.close' | t }}">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M18 6L6 18M6 6L18 18" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
      </svg>
    </button>
    <div class="quick-view-modal__body" data-quick-view-body>
      {% render 'skeleton-loader', type: 'product-page' %}
    </div>
  </div>
</div>

<style>
  .quick-view-modal {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 10000;
    visibility: hidden;
    opacity: 0;
    transition: visibility 0.3s var(--ease-in-out), opacity 0.3s var(--ease-in-out);
  }

  .quick-view-modal.active {
    visibility: visible;
    opacity: 1;
  }

  .quick-view-modal__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(26, 26, 26, 0.8);
    backdrop-filter: blur(4px);
    cursor: pointer;
  }

  .quick-view-modal__content {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%) scale(0.9);
    width: 90%;
    max-width: 1200px;
    max-height: 90vh;
    background: var(--color-white);
    border-radius: var(--radius-xl);
    box-shadow: var(--shadow-2xl);
    overflow: hidden;
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    display: flex;
    flex-direction: column;
  }

  .quick-view-modal.active .quick-view-modal__content {
    transform: translate(-50%, -50%) scale(1);
  }

  .quick-view-modal__close {
    position: absolute;
    top: var(--space-lg);
    right: var(--space-lg);
    z-index: 10;
    background: var(--color-white);
    border: none;
    width: 40px;
    height: 40px;
    border-radius: var(--radius-full);
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    box-shadow: var(--shadow-md);
    transition: all var(--duration-fast) var(--ease-in-out);
  }

  .quick-view-modal__close:hover {
    transform: rotate(90deg);
    background: var(--color-accent);
    color: var(--color-white);
  }

  .quick-view-modal__body {
    overflow-y: auto;
    padding: var(--space-4xl);
    max-height: 90vh;
  }

  @media (max-width: 767px) {
    .quick-view-modal__content {
      width: 100%;
      max-height: 100vh;
      border-radius: 0;
    }

    .quick-view-modal__body {
      padding: var(--space-xl);
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const quickViewModal = document.getElementById('quick-view-modal');
    const quickViewBody = document.querySelector('[data-quick-view-body]');
    const closeButtons = document.querySelectorAll('[data-quick-view-close]');
    const quickViewButtons = document.querySelectorAll('[data-quick-view]');

    function openQuickView(productId) {
      if (quickViewModal && quickViewBody) {
        quickViewModal.classList.add('active');
        document.body.style.overflow = 'hidden';
        quickViewModal.setAttribute('aria-hidden', 'false');
        
        // Show skeleton loader
        quickViewBody.innerHTML = '';
        const skeleton = document.createElement('div');
        skeleton.innerHTML = '{% render "skeleton-loader", type: "product-page" %}';
        quickViewBody.appendChild(skeleton);
        
        // Fetch product data
        fetch(`/products/${productId}?view=quick-view`)
          .then(response => response.text())
          .then(html => {
            quickViewBody.innerHTML = html;
          })
          .catch(error => {
            console.error('Quick view error:', error);
            quickViewBody.innerHTML = '<p>Error loading product. Please try again.</p>';
          });
      }
    }

    function closeQuickView() {
      if (quickViewModal) {
        quickViewModal.classList.remove('active');
        document.body.style.overflow = '';
        quickViewModal.setAttribute('aria-hidden', 'true');
      }
    }

    quickViewButtons.forEach(button => {
      button.addEventListener('click', function(e) {
        e.preventDefault();
        const productId = this.dataset.quickView;
        if (productId) {
          openQuickView(productId);
        }
      });
    });

    closeButtons.forEach(button => {
      button.addEventListener('click', closeQuickView);
    });

    // Close on ESC key
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape' && quickViewModal?.classList.contains('active')) {
        closeQuickView();
      }
    });
  });
</script>

