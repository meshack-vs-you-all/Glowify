{%- comment -%}
  Trust Badges Snippet
  Usage: {% render 'trust-badges', section: section %}
{%- endcomment -%}
<div class="trust-badges">
  {%- if section.settings.show_secure_checkout != false -%}
    <div class="trust-badges-item">
      <svg width="32" height="32" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
        <rect x="3" y="11" width="18" height="11" rx="2" stroke="currentColor" stroke-width="2"/>
        <path d="M7 11V7C7 4.79 8.79 3 11 3H13C15.21 3 17 4.79 17 7V11" stroke="currentColor" stroke-width="2"/>
      </svg>
      <span>{{ section.settings.secure_checkout_text | default: 'Secure Checkout' }}</span>
    </div>
  {%- endif -%}
  
  {%- if section.settings.show_fast_shipping != false -%}
    <div class="trust-badges-item">
      <svg width="32" height="32" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
        <path d="M20 7H4V5C4 3.9 4.9 3 6 3H18C19.1 3 20 3.9 20 5V7ZM4 9V19C4 20.1 4.9 21 6 21H18C19.1 21 20 20.1 20 19V9H4Z" stroke="currentColor" stroke-width="2"/>
        <path d="M8 12L10.5 14.5L16 9" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
      </svg>
      <span>{{ section.settings.fast_shipping_text | default: 'Fast Shipping' }}</span>
    </div>
  {%- endif -%}
  
  {%- if section.settings.show_quality_guaranteed != false -%}
    <div class="trust-badges-item">
      <svg width="32" height="32" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
        <path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
      <span>{{ section.settings.quality_guaranteed_text | default: 'Quality Guaranteed' }}</span>
    </div>
  {%- endif -%}
</div>

<style>
  .trust-badges {
    display: flex;
    gap: 16px;
    align-items: center;
    justify-content: center;
    flex-wrap: wrap;
  }

  .trust-badges-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 8px;
    color: var(--color-text-primary);
  }

  .trust-badges svg {
    width: 32px;
    height: 32px;
    color: var(--theme-accent);
    flex-shrink: 0;
  }

  .trust-badges-item span {
    font-size: var(--font-size-small);
    font-weight: var(--font-weight-medium);
  }

  @media (max-width: 768px) {
    .trust-badges {
      flex-direction: column;
      gap: 20px;
    }
  }
</style>


