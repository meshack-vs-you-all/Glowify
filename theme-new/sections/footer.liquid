    </button>
  {%- endif -%}
</footer>

<style>
  .site-footer {
    background-color: var(--color-white);
    padding: var(--space-3xl) 0 var(--space-xl);
    border-top: 1px solid var(--color-border-gray);
    margin-top: var(--space-3xl);
    position: relative;
  }

  .footer__wrapper {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 var(--space-md);
  }

  @media (min-width: 1024px) {
    .footer__wrapper {
      padding: 0 var(--space-2xl);
    }
  }

  /* Trust Row: Payment Icons + Social Icons */
  .footer__trust-row {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
    gap: var(--space-xl);
    margin-bottom: var(--space-xl);
    padding-bottom: var(--space-xl);
  }

  .footer__payment-badges {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-md);
    flex-wrap: wrap;
    flex: 1;
    min-width: 0;
  }

  .footer__payment-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 60px;
    height: 40px;
    flex-shrink: 0;
    transition: transform var(--duration-fast) var(--ease-in-out), opacity var(--duration-fast) var(--ease-in-out);
    opacity: 0.9;
  }

  .footer__payment-icon:hover {
    transform: translateY(-2px);
    opacity: 1;
  }

  .footer__payment-icon svg {
    width: 100%;
    height: 100%;
    object-fit: contain;
    display: block;
  }

  .footer__social-icons {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    flex-wrap: wrap;
  }

  .footer__social-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: var(--radius-full);
    background-color: var(--color-black);
    color: var(--color-white);
    transition: all var(--duration-fast) var(--ease-in-out);
  }

  .footer__social-icon:hover {
    background-color: var(--color-accent);
    transform: translateY(-2px);
  }

  .footer__social-icon svg {
    width: 20px;
    height: 20px;
  }

  /* Divider */
  .footer__divider {
    height: 1px;
    background-color: var(--color-border-gray);
    margin: var(--space-lg) 0;
  }

  /* Trust Badges Section */
  .footer__trust-badges-section {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: var(--space-xl) 0;
  }

  /* Footer Bottom */
  .footer__bottom {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: var(--space-md);
    padding-top: var(--space-lg);
  }

  .footer__nav-links {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-wrap: wrap;
    gap: var(--space-xs);
    font-size: var(--font-size-small);
  }

  /* Copyright Wrapper - Always at the very bottom */
  .footer__copyright-wrapper {
    display: flex;
    justify-content: center;
    align-items: center;
    padding-top: var(--space-lg);
    margin-top: var(--space-lg);
    border-top: 1px solid var(--color-border-gray);
  }

  .footer__copyright {
    font-size: var(--font-size-small);
    color: var(--color-text-secondary);
    text-align: center;
  }

  .footer__nav-link {
    color: var(--color-text-secondary);
    text-decoration: none;
    transition: color var(--duration-fast) var(--ease-in-out);
    white-space: nowrap;
  }

  .footer__nav-link:hover,
  .footer__nav-link--active {
    color: var(--color-text-primary);
  }

  .footer__nav-separator {
    color: var(--color-text-secondary);
    margin: 0 var(--space-xs);
    user-select: none;
  }

  .footer__country-selector {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-sm);
    font-size: var(--font-size-small);
    color: var(--color-text-secondary);
    cursor: pointer;
    transition: color var(--duration-fast) var(--ease-in-out);
  }

  .footer__country-selector:hover {
    color: var(--color-text-primary);
  }

  .footer__flag-icon {
    width: 32px;
    height: 17px;
    flex-shrink: 0;
    border-radius: 2px;
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
    display: block;
  }

  /* Floating Chat Button */
  .footer__chat-button {
    position: fixed;
    bottom: var(--space-xl);
    right: var(--space-xl);
    width: 56px;
    height: 56px;
    border-radius: var(--radius-full);
    background-color: var(--color-black);
    color: var(--color-white);
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: var(--shadow-xl);
    transition: all var(--duration-fast) var(--ease-in-out);
    z-index: 1000;
  }

  .footer__chat-button:hover {
    background-color: var(--color-accent);
    transform: scale(1.1);
    box-shadow: var(--shadow-2xl);
  }

  .footer__chat-button svg {
    width: 24px;
    height: 24px;
  }

  /* Responsive */
  @media (max-width: 1023px) {
    .footer__trust-row {
      flex-direction: column;
      align-items: center;
      gap: var(--space-lg);
    }

    .footer__payment-badges {
      justify-content: center;
      width: 100%;
      gap: var(--space-md);
      flex-wrap: wrap;
    }

    .footer__payment-icon {
      width: 55px;
      height: 36px;
    }

    .footer__social-icons {
      justify-content: center;
      width: 100%;
    }

    .footer__trust-badges-section {
      gap: var(--space-xl);
      padding: var(--space-lg) 0;
    }
  }

  @media (max-width: 767px) {
    .footer__wrapper {
      padding: 0 var(--space-md);
    }

    .footer__trust-row {
      gap: var(--space-md);
      margin-bottom: var(--space-lg);
      padding-bottom: var(--space-lg);
    }

    .footer__payment-badges {
      gap: var(--space-sm);
      justify-content: center;
    }

    .footer__payment-icon {
      width: 50px;
      height: 33px;
    }

    .footer__social-icon {
      width: 36px;
      height: 36px;
