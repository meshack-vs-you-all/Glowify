          "default": "Newsletter"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Text",
          "default": "Subscribe to receive updates and exclusive deals."
        }
      ]
    },
    {
      "type": "social",
      "name": "Social",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Follow Us"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Text"
        },
        {
          "type": "url",
          "id": "facebook",
          "label": "Facebook"
        },
        {
          "type": "url",
          "id": "instagram",
          "label": "Instagram"
        },
        {
          "type": "url",
          "id": "twitter",
          "label": "Twitter"
        }
      ]
    }
  ]
}
{% endschema %}

