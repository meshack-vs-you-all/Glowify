    {%- comment -%} Divider {%- endcomment -%}
    <div class="footer__divider"></div>

    {%- comment -%} Trust Badges Section (Secure Checkout, Fast Shipping, Quality Guaranteed) {%- endcomment -%}
    <div class="footer__trust-badges-section">
      {% render 'trust-badges', section: section %}
    </div>

    {%- comment -%} Footer Navigation Links and Country Selector {%- endcomment -%}
    <div class="footer__bottom">
      <div class="footer__nav-links">
        {%- comment -%} Use footer menu from admin if configured, otherwise fallback to policy links {%- endcomment -%}
        {%- if section.settings.footer_menu != blank and linklists[section.settings.footer_menu].links.size > 0 -%}
          {%- comment -%} Admin-managed footer menu {%- endcomment -%}
          {%- for link in linklists[section.settings.footer_menu].links -%}
            <a href="{{ link.url }}" class="footer__nav-link {% if link.active %}footer__nav-link--active{% endif %}">
              {{ link.title }}
            </a>
            {%- unless forloop.last -%}
              <span class="footer__nav-separator">|</span>
            {%- endunless -%}
          {%- endfor -%}
        {%- else -%}
          {%- comment -%} Fallback: Policy page links - always show, link to page if exists, otherwise root {%- endcomment -%}
          {%- assign terms_page = pages['terms-of-service'] -%}
          {%- if terms_page -%}
            <a href="{{ terms_page.url }}" class="footer__nav-link">Terms of Service</a>
            <span class="footer__nav-separator">|</span>
          {%- endif -%}
          
          {%- assign privacy_page = pages['privacy-policy'] -%}
          {%- if privacy_page -%}
            <a href="{{ privacy_page.url }}" class="footer__nav-link">Privacy Policy</a>
            <span class="footer__nav-separator">|</span>
          {%- endif -%}
          
          {%- assign refund_page = pages['refund-policy'] -%}
          {%- if refund_page -%}
            <a href="{{ refund_page.url }}" class="footer__nav-link">Refund Policy</a>
            <span class="footer__nav-separator">|</span>
          {%- endif -%}
          
          {%- assign shipping_page = pages['shipping-policy'] -%}
          {%- if shipping_page -%}
            <a href="{{ shipping_page.url }}" class="footer__nav-link">Shipping Policy</a>
            <span class="footer__nav-separator">|</span>
          {%- endif -%}
          
          {%- assign cookie_page = pages['cookie-policy'] -%}
          {%- if cookie_page -%}
            <a href="{{ cookie_page.url }}" class="footer__nav-link">Cookie Policy</a>
          {%- endif -%}
        {%- endif -%}
      </div>
      
