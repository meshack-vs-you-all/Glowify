<footer class="site-footer">
  <div class="footer__wrapper page-width">
    <div class="footer__top">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'link_list' -%}
            <div class="footer__column" {{ block.shopify_attributes }}>
              <h3 class="footer__heading">{{ block.settings.heading }}</h3>
              <ul class="footer__links">
                {%- for link in linklists[block.settings.menu].links -%}
                  <li>
                    <a href="{{ link.url }}" class="footer__link">{{ link.title }}</a>
                  </li>
                {%- endfor -%}
              </ul>
            </div>
          {%- when 'newsletter' -%}
            <div class="footer__column footer__column--newsletter" {{ block.shopify_attributes }}>
              <h3 class="footer__heading">{{ block.settings.heading }}</h3>
              <p class="footer__text">{{ block.settings.text }}</p>
              {%- form 'customer', class: 'footer__newsletter-form' -%}
                <div class="footer__input-group">
                  <input 
                    type="email" 
                    name="contact[email]" 
                    class="footer__input" 
                    placeholder="{{ 'general.newsletter_form.email_placeholder' | t }}"
                    required
                    aria-label="{{ 'general.newsletter_form.email_placeholder' | t }}"
                  >
                  <button type="submit" class="footer__submit-button">
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                      <path d="M5 12H19M19 12L12 5M19 12L12 19" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                    </svg>
                  </button>
                </div>
              {%- endform -%}
            </div>
          {%- when 'social' -%}
            <div class="footer__column" {{ block.shopify_attributes }}>
              <h3 class="footer__heading">{{ block.settings.heading }}</h3>
              <p class="footer__text">{{ block.settings.text }}</p>
              <div class="footer__social">
                {%- if block.settings.facebook != blank -%}
                  <a href="{{ block.settings.facebook }}" class="footer__social-link" target="_blank" rel="noopener">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                      <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1h3z"/>
                    </svg>
                  </a>
                {%- endif -%}
                {%- if block.settings.instagram != blank -%}
                  <a href="{{ block.settings.instagram }}" class="footer__social-link" target="_blank" rel="noopener">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                      <rect x="2" y="2" width="20" height="20" rx="5" ry="5" fill="none" stroke="currentColor" stroke-width="2"/>
                      <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z" fill="none" stroke="currentColor" stroke-width="2"/>
                      <line x1="17.5" y1="6.5" x2="17.51" y2="6.5" stroke="currentColor" stroke-width="2"/>
                    </svg>
                  </a>
                {%- endif -%}
                {%- if block.settings.twitter != blank -%}
                  <a href="{{ block.settings.twitter }}" class="footer__social-link" target="_blank" rel="noopener">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                      <path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"/>
                    </svg>
                  </a>
                {%- endif -%}
              </div>
            </div>
        {%- endcase -%}
      {%- endfor -%}
    </div>

    <div class="footer__bottom">
      <div class="footer__copyright">
        &copy; {{ 'now' | date: "%Y" }} {{ shop.name }}. {{ 'footer.copyright' | t }}
      </div>
      <div class="footer__payment">
        <span class="footer__payment-text">{{ 'footer.payment_methods' | t }}</span>
        <div class="footer__payment-icons">
          {%- comment -%} Using Shopify's payment icons if available {%- endcomment -%}
          {%- if shop.enabled_payment_types.size > 0 -%}
            {%- for type in shop.enabled_payment_types -%}
              <div class="footer__payment-icon">
                {{ type | payment_type_svg_tag: class: 'payment-icon' }}
              </div>
            {%- endfor -%}
          {%- else -%}
            {%- comment -%} Default payment icons if none configured {%- endcomment -%}
            <div class="footer__payment-icon" title="Visa">
              <svg width="40" height="24" viewBox="0 0 40 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <rect width="40" height="24" rx="4" fill="#1434CB"/>
                <path d="M16.5 8.5L14.5 15.5H12.8L11.2 9.7C11.1 9.3 10.8 9.1 10.4 9.1H7.5L7.4 9.4C8.2 9.6 9 10 9.6 10.6L11.8 15.5H9.8L7.2 8.5H9.1L10.5 13.1L11.9 8.5H16.5ZM24.2 8.5L22.1 15.5H20.4L19.1 10.1C19 9.7 18.8 9.5 18.4 9.5H17.2L17.1 9.8C17.6 10 18.1 10.2 18.4 10.4L19.6 15.5H17.6L15.5 8.5H17.2L18.5 13.9L19.9 8.5H24.2ZM30.5 8.5L28.4 15.5H26.7L28.1 9.7C28.2 9.3 28.4 9.1 28.8 9.1H30.5L32.6 15.5H30.9L30.5 8.5Z" fill="white"/>
              </svg>
            </div>
            <div class="footer__payment-icon" title="Mastercard">
              <svg width="40" height="24" viewBox="0 0 40 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <rect width="40" height="24" rx="4" fill="#EB001B"/>
                <circle cx="15" cy="12" r="7" fill="#F79E1B"/>
                <circle cx="17" cy="12" r="7" fill="#FF5F00"/>
              </svg>
            </div>
            <div class="footer__payment-icon" title="American Express">
              <svg width="40" height="24" viewBox="0 0 40 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <rect width="40" height="24" rx="4" fill="#006FCF"/>
                <path d="M8 7H12L13.5 10L15 7H19V17H16V11L14.5 14H12.5L11 11V17H8V7ZM21 7H26C27.1 7 28 7.9 28 9V15C28 16.1 27.1 17 26 17H21V7ZM24 15V9H23V15H24Z" fill="white"/>
              </svg>
            </div>
            <div class="footer__payment-icon" title="PayPal">
              <svg width="40" height="24" viewBox="0 0 40 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <rect width="40" height="24" rx="4" fill="#003087"/>
                <path d="M15 8C14.5 8 14 8.5 14 9V12H17C17.5 12 18 11.5 18 11C18 10.5 17.5 10 17 10H15V8ZM12 9C12 8.4 12.4 8 13 8H18C18.6 8 19 8.4 19 9V11C19 11.6 18.6 12 18 12H16L15 15H13L14 12H12V9Z" fill="#009CDE"/>
                <path d="M20 8H23C23.6 8 24 8.4 24 9V11C24 11.6 23.6 12 23 12H21L20 15H18L19 12H20V8Z" fill="#012169"/>
              </svg>
            </div>
            <div class="footer__payment-icon" title="Apple Pay">
              <svg width="40" height="24" viewBox="0 0 40 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <rect width="40" height="24" rx="4" fill="#000"/>
                <path d="M12.5 7C12.2 7.3 11.7 7.5 11.1 7.5C10.5 7.5 10 7.2 9.7 6.9C9.4 6.6 9.2 6.1 9.2 5.5C9.2 4.9 9.5 4.4 9.8 4.1C10.1 3.8 10.6 3.6 11.2 3.6C11.8 3.6 12.3 3.9 12.6 4.2C12.9 4.5 13.1 5 13.1 5.6C13.1 6.2 12.8 6.7 12.5 7ZM9.5 8.5H12.8L12.1 16.5H9.5V8.5ZM14.2 8.5H16.9C18.5 8.5 19.6 9.1 20.1 10.2C20.6 11.3 20.4 12.6 19.5 13.4C20.2 13.6 20.7 14.1 20.9 14.8C21.1 15.5 20.9 16.3 20.3 16.9C19.7 17.5 18.8 17.8 17.6 17.8H16.2L15.5 20.5H13.2L14.2 8.5ZM16.5 11.2V13.2H17.2C17.8 13.2 18.2 13 18.4 12.6C18.6 12.2 18.5 11.8 18.1 11.5C17.7 11.2 17.3 11.1 16.8 11.1H16.5V11.2ZM16.5 14.8V16.5H17.1C17.7 16.5 18.1 16.3 18.3 15.9C18.5 15.5 18.4 15.1 18 14.8C17.6 14.5 17.2 14.4 16.7 14.4H16.5V14.8Z" fill="white"/>
              </svg>
            </div>
          {%- endif -%}
        </div>
      </div>
    </div>
  </div>
</footer>

<style>
  .site-footer {
    background-color: var(--color-light-gray);
    padding: var(--space-4xl) 0 var(--space-2xl);
    border-top: 1px solid var(--color-border-gray);
    margin-top: var(--space-5xl);
  }

  .footer__top {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--space-2xl);
    margin-bottom: var(--space-3xl);
  }

  .footer__column {
    display: flex;
    flex-direction: column;
  }

  .footer__heading {
    font-family: var(--font-heading-family);
    font-size: var(--font-size-body-large);
    font-weight: var(--font-weight-semibold);
    color: var(--color-text-primary);
    margin-bottom: var(--space-lg);
    position: relative;
    padding-bottom: var(--space-md);
  }

  .footer__heading::after {
    content: '';
    position: absolute;
    left: 0;
    bottom: 0;
    width: 40px;
    height: 2px;
    background-color: var(--color-accent);
  }

  .footer__text {
    font-size: var(--font-size-body);
    line-height: var(--line-height-body);
    color: var(--color-text-secondary);
    margin-bottom: var(--space-lg);
  }

  .footer__links {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer__link {
    display: block;
    color: var(--color-text-secondary);
    text-decoration: none;
    padding: var(--space-sm) 0;
    font-size: var(--font-size-body);
    transition: all var(--duration-fast) var(--ease-in-out);
  }

  .footer__link:hover {
    color: var(--color-accent);
    padding-left: var(--space-sm);
  }

  .footer__newsletter-form {
    margin-top: var(--space-md);
  }

  .footer__input-group {
    display: flex;
    border: 1px solid var(--color-border-gray);
    border-radius: var(--radius-md);
    overflow: hidden;
  }

  .footer__input {
    flex: 1;
    padding: var(--space-md);
    border: none;
    font-size: var(--font-size-body);
    outline: none;
    background: var(--color-white);
  }

  .footer__submit-button {
    background-color: var(--color-accent);
    color: var(--color-white);
    border: none;
    padding: 0 var(--space-lg);
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background-color var(--duration-fast) var(--ease-in-out);
  }

  .footer__submit-button:hover {
    background-color: var(--color-accent);
    opacity: 0.9;
  }

  .footer__social {
    display: flex;
    gap: var(--space-md);
    margin-top: var(--space-md);
  }

  .footer__social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    border-radius: var(--radius-full);
    background-color: var(--color-white);
    color: var(--color-text-primary);
    transition: all var(--duration-fast) var(--ease-in-out);
  }

  .footer__social-link:hover {
    background-color: var(--color-accent);
    color: var(--color-white);
    transform: translateY(-2px);
  }

  .footer__bottom {
    border-top: 1px solid var(--color-border-gray);
    padding-top: var(--space-2xl);
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: var(--space-lg);
  }

  .footer__copyright {
    font-size: var(--font-size-small);
    color: var(--color-text-secondary);
  }

  .footer__payment {
    font-size: var(--font-size-small);
    color: var(--color-text-secondary);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-md);
  }

  .footer__payment-text {
    font-weight: var(--font-weight-medium);
  }

  .footer__payment-icons {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-sm);
    align-items: center;
    justify-content: center;
  }

  .footer__payment-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 24px;
    opacity: 0.8;
    transition: opacity var(--duration-fast) var(--ease-in-out);
  }

  .footer__payment-icon:hover {
    opacity: 1;
  }

  .footer__payment-icon svg,
  .footer__payment-icon .payment-icon {
    height: 24px;
    width: auto;
    max-width: 50px;
  }

  @media (min-width: 768px) {
    .footer__payment {
      align-items: flex-end;
    }

    .footer__payment-icons {
      justify-content: flex-end;
    }
  }

  @media (min-width: 768px) {
    .footer__bottom {
      flex-direction: row;
      justify-content: space-between;
      text-align: left;
    }
    
    .footer__top {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  @media (max-width: 767px) {
    .footer__column--newsletter {
      grid-column: 1 / -1;
    }
  }
</style>

{% schema %}
{
  "name": "Footer",
  "blocks": [
    {
      "type": "link_list",
      "name": "Link List",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Quick Links"
        },
        {
          "type": "link_list",
          "id": "menu",
          "label": "Menu"
        }
      ]
    },
    {
      "type": "newsletter",
      "name": "Newsletter",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Newsletter"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Text",
          "default": "Subscribe to receive updates and exclusive deals."
        }
      ]
    },
    {
      "type": "social",
      "name": "Social",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Follow Us"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Text"
        },
        {
          "type": "url",
          "id": "facebook",
          "label": "Facebook"
        },
        {
          "type": "url",
          "id": "instagram",
          "label": "Instagram"
        },
        {
          "type": "url",
          "id": "twitter",
          "label": "Twitter"
        }
      ]
    }
  ]
}
{% endschema %}

