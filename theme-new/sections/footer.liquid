<footer class="site-footer">
  <div class="footer__wrapper page-width">
    <div class="footer__top">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'link_list' -%}
            <div class="footer__column" {{ block.shopify_attributes }}>
              <h3 class="footer__heading">{{ block.settings.heading }}</h3>
              <ul class="footer__links">
                {%- for link in linklists[block.settings.menu].links -%}
                  <li>
                    <a href="{{ link.url }}" class="footer__link">{{ link.title }}</a>
                  </li>
                {%- endfor -%}
              </ul>
            </div>
          {%- when 'newsletter' -%}
            <div class="footer__column footer__column--newsletter" {{ block.shopify_attributes }}>
              <h3 class="footer__heading">{{ block.settings.heading }}</h3>
              <p class="footer__text">{{ block.settings.text }}</p>
              {%- form 'customer', class: 'footer__newsletter-form' -%}
                <div class="footer__input-group">
                  <input 
                    type="email" 
                    name="contact[email]" 
                    class="footer__input" 
                    placeholder="{{ 'general.newsletter_form.email_placeholder' | t }}"
                    required
                    aria-label="{{ 'general.newsletter_form.email_placeholder' | t }}"
                  >
                  <button type="submit" class="footer__submit-button">
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                      <path d="M5 12H19M19 12L12 5M19 12L12 19" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                    </svg>
                  </button>
                </div>
              {%- endform -%}
            </div>
          {%- when 'social' -%}
            <div class="footer__column" {{ block.shopify_attributes }}>
              <h3 class="footer__heading">{{ block.settings.heading }}</h3>
              <p class="footer__text">{{ block.settings.text }}</p>
              <div class="footer__social">
                {%- if block.settings.facebook != blank -%}
                  <a href="{{ block.settings.facebook }}" class="footer__social-link" target="_blank" rel="noopener">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                      <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1h3z"/>
                    </svg>
                  </a>
                {%- endif -%}
                {%- if block.settings.instagram != blank -%}
                  <a href="{{ block.settings.instagram }}" class="footer__social-link" target="_blank" rel="noopener">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                      <rect x="2" y="2" width="20" height="20" rx="5" ry="5" fill="none" stroke="currentColor" stroke-width="2"/>
                      <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z" fill="none" stroke="currentColor" stroke-width="2"/>
                      <line x1="17.5" y1="6.5" x2="17.51" y2="6.5" stroke="currentColor" stroke-width="2"/>
                    </svg>
                  </a>
                {%- endif -%}
                {%- if block.settings.twitter != blank -%}
                  <a href="{{ block.settings.twitter }}" class="footer__social-link" target="_blank" rel="noopener">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                      <path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"/>
                    </svg>
                  </a>
                {%- endif -%}
              </div>
            </div>
        {%- endcase -%}
      {%- endfor -%}
    </div>

    <div class="footer__bottom">
      <div class="footer__copyright">
        &copy; {{ 'now' | date: "%Y" }} {{ shop.name }}. {{ 'footer.copyright' | t }}
      </div>
      <div class="footer__payment">
        <span class="footer__payment-text">{{ 'footer.payment_methods' | t }}</span>
        <!-- Payment icons placeholder -->
      </div>
    </div>
  </div>
</footer>

<style>
  .site-footer {
    background-color: var(--color-light-gray);
    padding: var(--space-4xl) 0 var(--space-2xl);
    border-top: 1px solid var(--color-border-gray);
    margin-top: var(--space-5xl);
  }

  .footer__top {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--space-2xl);
    margin-bottom: var(--space-3xl);
  }

  .footer__column {
    display: flex;
    flex-direction: column;
  }

  .footer__heading {
    font-family: var(--font-heading-family);
    font-size: var(--font-size-body-large);
    font-weight: var(--font-weight-semibold);
    color: var(--color-text-primary);
    margin-bottom: var(--space-lg);
    position: relative;
    padding-bottom: var(--space-md);
  }

  .footer__heading::after {
    content: '';
    position: absolute;
    left: 0;
    bottom: 0;
    width: 40px;
    height: 2px;
    background-color: var(--color-accent);
  }

  .footer__text {
    font-size: var(--font-size-body);
    line-height: var(--line-height-body);
    color: var(--color-text-secondary);
    margin-bottom: var(--space-lg);
  }

  .footer__links {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer__link {
    display: block;
    color: var(--color-text-secondary);
    text-decoration: none;
    padding: var(--space-sm) 0;
    font-size: var(--font-size-body);
    transition: all var(--duration-fast) var(--ease-in-out);
  }

  .footer__link:hover {
    color: var(--color-accent);
    padding-left: var(--space-sm);
  }

  .footer__newsletter-form {
    margin-top: var(--space-md);
  }

  .footer__input-group {
    display: flex;
    border: 1px solid var(--color-border-gray);
    border-radius: var(--radius-md);
    overflow: hidden;
  }

  .footer__input {
    flex: 1;
    padding: var(--space-md);
    border: none;
    font-size: var(--font-size-body);
    outline: none;
    background: var(--color-white);
  }

  .footer__submit-button {
    background-color: var(--color-accent);
    color: var(--color-white);
    border: none;
    padding: 0 var(--space-lg);
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background-color var(--duration-fast) var(--ease-in-out);
  }

  .footer__submit-button:hover {
    background-color: var(--color-accent);
    opacity: 0.9;
  }

  .footer__social {
    display: flex;
    gap: var(--space-md);
    margin-top: var(--space-md);
  }

  .footer__social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    border-radius: var(--radius-full);
    background-color: var(--color-white);
    color: var(--color-text-primary);
    transition: all var(--duration-fast) var(--ease-in-out);
  }

  .footer__social-link:hover {
    background-color: var(--color-accent);
    color: var(--color-white);
    transform: translateY(-2px);
  }

  .footer__bottom {
    border-top: 1px solid var(--color-border-gray);
    padding-top: var(--space-2xl);
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: var(--space-lg);
  }

  .footer__copyright {
    font-size: var(--font-size-small);
    color: var(--color-text-secondary);
  }

  .footer__payment {
    font-size: var(--font-size-small);
    color: var(--color-text-secondary);
  }

  @media (min-width: 768px) {
    .footer__bottom {
      flex-direction: row;
      justify-content: space-between;
      text-align: left;
    }
    
    .footer__top {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  @media (max-width: 767px) {
    .footer__column--newsletter {
      grid-column: 1 / -1;
    }
  }
</style>

