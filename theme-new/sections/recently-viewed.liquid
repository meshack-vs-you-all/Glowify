{%- comment -%}
  Recently Viewed Products Section
  Displays products the customer has recently viewed using LocalStorage
{%- endcomment -%}

{%- liquid
  assign section_id = 'recently-viewed-' | append: section.id
  assign show_on_home = section.settings.show_on_home
  assign show_on_product = section.settings.show_on_product
  assign heading = section.settings.heading | default: 'Recently Viewed'
-%}

{%- if show_on_home and template.name == 'index' or show_on_product and template.name == 'product' -%}
  <section class="recently-viewed-section section" 
           id="{{ section_id }}" 
           data-recently-viewed 
           data-section-type="recently-viewed">
    <div class="page-width">
      {%- if heading != blank -%}
        <div class="recently-viewed-section__header">
          <h2 class="recently-viewed-section__title">{{ heading }}</h2>
        </div>
      {%- endif -%}

      <div class="recently-viewed__container">
        <div class="recently-viewed__track" data-recently-viewed-track>
          {%- comment -%} Products will be injected via JavaScript {%- endcomment -%}
          <div class="recently-viewed__loading">
            <p>{{ 'sections.recently_viewed.loading' | t: default: 'Loading...' }}</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <style>
    .recently-viewed-section {
      padding: var(--space-4xl) 0;
    }

    .recently-viewed-section__header {
      margin-bottom: var(--space-2xl);
    }

    .recently-viewed-section__title {
      font-size: var(--font-size-h2-mobile);
      line-height: var(--line-height-h2-mobile);
      font-weight: var(--font-weight-bold);
      color: var(--color-text-primary);
    }

    @media (min-width: 768px) {
      .recently-viewed-section__title {
        font-size: var(--font-size-h2-desktop);
        line-height: var(--line-height-h2-desktop);
      }
    }

    .recently-viewed__container {
      overflow: hidden;
      position: relative;
    }

    .recently-viewed__track {
      display: flex;
      gap: var(--space-lg);
      overflow-x: auto;
      overflow-y: hidden;
      scroll-behavior: smooth;
      -webkit-overflow-scrolling: touch;
      scrollbar-width: thin;
      padding-bottom: var(--space-md);
      cursor: grab;
    }

    .recently-viewed__track::-webkit-scrollbar {
      height: 6px;
    }

    .recently-viewed__track::-webkit-scrollbar-track {
      background: var(--color-light-gray);
      border-radius: var(--radius-full);
    }

    .recently-viewed__track::-webkit-scrollbar-thumb {
      background: var(--color-accent);
      border-radius: var(--radius-full);
    }

    .recently-viewed__track:active {
      cursor: grabbing;
    }

    .recently-viewed__item {
      flex: 0 0 200px;
      min-width: 200px;
    }

    @media (min-width: 640px) {
      .recently-viewed__item {
        flex: 0 0 240px;
        min-width: 240px;
      }
    }

    .recently-viewed__link {
      display: block;
      text-decoration: none;
      color: inherit;
      transition: transform 0.3s var(--ease-in-out);
    }

    .recently-viewed__link:hover {
      transform: translateY(-4px);
    }

    .recently-viewed__image-wrapper {
      width: 100%;
      aspect-ratio: 4 / 5;
      border-radius: var(--radius-lg);
      overflow: hidden;
      background: var(--color-light-gray);
      margin-bottom: var(--space-md);
      position: relative;
    }

    .recently-viewed__image {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 0.5s var(--ease-in-out);
    }

    .recently-viewed__link:hover .recently-viewed__image {
      transform: scale(1.05);
    }

    .recently-viewed__placeholder {
      width: 100%;
      height: 100%;
      background: var(--color-light-gray);
    }

    .recently-viewed__info {
      text-align: center;
    }

    .recently-viewed__title {
      font-size: var(--font-size-body);
      font-weight: var(--font-weight-medium);
      color: var(--color-text-primary);
      margin: 0 0 var(--space-sm) 0;
      line-height: var(--line-height-body);
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }

    .recently-viewed__price {
      font-size: var(--font-size-body);
      font-weight: var(--font-weight-semibold);
      color: var(--color-text-primary);
    }

    .recently-viewed__price-sale {
      color: var(--color-accent);
      margin-right: var(--space-xs);
    }

    .recently-viewed__price-compare {
      text-decoration: line-through;
      color: var(--color-text-secondary);
      font-size: var(--font-size-small);
      font-weight: var(--font-weight-regular);
    }

    .recently-viewed__loading {
      text-align: center;
      padding: var(--space-2xl);
      color: var(--color-text-secondary);
    }
  </style>

  <script src="{{ 'recently-viewed.js' | asset_url }}" defer></script>
{%- endif -%}

{% schema %}
{
  "name": "Recently Viewed Products",
  "tag": "section",
  "class": "section-recently-viewed",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Recently Viewed"
    },
    {
      "type": "checkbox",
      "id": "show_on_home",
      "label": "Show on homepage",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_on_product",
      "label": "Show on product pages",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Recently Viewed Products"
    }
  ]
}
{% endschema %}

