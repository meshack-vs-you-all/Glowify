        },
        {
          "type": "url",
          "id": "link",
          "label": "Link Link"
        },
        {
          "type": "text",
          "id": "link_text",
          "label": "Button Text",
          "default": "Shop Now"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero V2 (Dual)",
      "blocks": [
        {
          "type": "banner",
          "settings": {
            "title": "Essential Gear",
            "subtitle": "Best Sellers"
          }
        },
        {
          "type": "banner",
          "settings": {
