{%- comment -%}
  HERO V2 - Mobile-First Dual Layout
  Optimized for baby products. Fully Dynamic.
{%- endcomment -%}

<section class="hero-v2-section" id="hero-v2-{{ section.id }}">
  <div class="hero-v2-container">
    <div class="hero-v2-grid">
      {%- for block in section.blocks -%}
        {%- assign block_product = block.settings.product -%}
        {%- assign display_image = block.settings.image | default: block_product.featured_image -%}
        
        {%- comment -%} Title Logic: Use Override if set/changed, else Product Title, else Default/Fallback {%- endcomment -%}
        {%- assign display_title = block.settings.title -%}
        {%- if block_product != blank and block.settings.title == 'Collection Name' -%}
          {%- assign display_title = block_product.title -%}
        {%- elsif block_product != blank and block.settings.title == blank -%}
           {%- assign display_title = block_product.title -%}
        {%- endif -%}

        {%- assign display_link = block.settings.link | default: block_product.url -%}
        {%- assign display_subtitle = block.settings.subtitle -%}

        <div class="hero-v2-item group" {{ block.shopify_attributes }}>
          <div class="hero-v2-media">
            {%- if display_image != blank -%}
              <img 
                src="{{ display_image | image_url: width: 800 }}" 
                srcset="{{ display_image | image_url: width: 800 }} 800w, {{ display_image | image_url: width: 1200 }} 1200w"
                sizes="(min-width: 768px) 50vw, 100vw"
                alt="{{ display_image.alt | default: display_title | escape }}" 
                loading="{% if forloop.first %}eager{% else %}lazy{% endif %}"
                fetchpriority="{% if forloop.first %}high{% else %}auto{% endif %}"
                width="800"
                height="1000"
                class="hero-v2-img"
              >
            {%- else -%}
              {{ 'collection-' | append: forloop.index | placeholder_svg_tag: 'hero-v2-img placeholder-svg' }}
            {%- endif -%}
            <div class="hero-v2-overlay"></div>
          </div>
          <div class="hero-v2-content">
            {%- if display_subtitle != blank -%}
              <span class="hero-v2-subtitle">{{ display_subtitle }}</span>
            {%- endif -%}
            
            <h2 class="hero-v2-title">{{ display_title }}</h2>
            
            {%- if block_product != blank and block.settings.show_price -%}
              <div class="hero-v2-price price-component price-component--large" style="justify-content: center; margin-bottom: 1rem;">
                <span class="price-item price-item--regular" style="color: #fff;">{{ block_product.price | money }}</span>
                {%- if block_product.compare_at_price > block_product.price -%}
                  <span class="price-item price-item--compare" style="color: rgba(255,255,255,0.7);">
                    {{ block_product.compare_at_price | money }}
                  </span>
                {%- endif -%}
              </div>
            {%- endif -%}
            
            {%- if display_link != blank -%}
              <a href="{{ display_link }}" class="hero-v2-btn">{{ block.settings.link_text }}</a>
            {%- endif -%}
          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>

<style>
  .hero-v2-section {
    width: 100%;
    overflow: hidden;
    background: #000;
  }

  .hero-v2-grid {
    display: flex;
    flex-direction: column;
    width: 100%;
  }

  @media (min-width: 768px) {
    .hero-v2-grid {
      flex-direction: row;
    }
  }

  /* Item Container */
  .hero-v2-item {
    position: relative;
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
    overflow: hidden;
    /* Aspect Ratio Control */
    height: 60vh; /* Mobile height */
    min-height: 400px;
  }

  @media (min-width: 768px) {
    .hero-v2-item {
      height: 75vh; /* Desktop height */
      min-height: 600px;
    }
  }

  /* Image Handling */
  .hero-v2-media {
    position: absolute;
    inset: 0;
    z-index: 1;
  }

  .hero-v2-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    transition: transform 0.7s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  .hero-v2-img.placeholder-svg {
    background: #e5e5e5;
    fill: #999;
  }

  .hero-v2-item:hover .hero-v2-img {
    transform: scale(1.05);
  }

  .hero-v2-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(to top, rgba(0,0,0,0.5) 0%, rgba(0,0,0,0.1) 50%, rgba(0,0,0,0) 100%);
    z-index: 2;
  }

  /* Content */
  .hero-v2-content {
    position: relative;
    z-index: 10;
    text-align: center;
    color: #fff;
    padding: 2rem;
    transform: translateY(0);
    transition: transform 0.5s ease;
    width: 100%;
    max-width: 500px;
  }

  .hero-v2-subtitle {
    display: block;
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 0.5rem;
    opacity: 0.9;
  }

  .hero-v2-title {
    font-size: 2.25rem;
    font-weight: 700;
    line-height: 1.1;
    margin-bottom: 1.5rem;
    color: #fff;
  }

  @media (min-width: 768px) {
    .hero-v2-title {
      font-size: 3rem;
    }
  }

  .hero-v2-btn {
    display: inline-block;
    padding: 1rem 2rem;
    background: #fff;
    color: #000;
    font-weight: 600;
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    border-radius: 4px;
    transition: all 0.3s ease;
    text-decoration: none;
    /* Soft Pulse */
    animation: softPulse 3s cubic-bezier(0.4, 0, 0.2, 1) infinite;
  }

  .hero-v2-item:hover .hero-v2-btn {
    background: #f0f0f0;
    transform: translateY(-2px);
    animation: none;
  }
</style>

{% schema %}
{
  "name": "Hero V2 (Dual)",
  "settings": [],
  "max_blocks": 2,
  "blocks": [
    {
      "type": "banner",
      "name": "Banner",
      "settings": [
        {
          "type": "header",
          "content": "Product Content (Dynamic)"
        },
        {
          "type": "product",
          "id": "product",
          "label": "Product",
          "info": "Select a product to automatically populate image, title, and link."
        },
        {
          "type": "checkbox",
          "id": "show_price",
          "label": "Show Price",
          "default": true
        },
        {
          "type": "header",
          "content": "Manual Overrides"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image Override",
          "info": "Leave empty to use Product Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title Override",
          "info": "Leave empty to use Product Title",
          "default": "Collection Name"
        },
        {
          "type": "text",
          "id": "subtitle",
          "label": "Subtitle",
          "default": "New Arrivals"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link Override",
          "info": "Leave empty to use Product URL"
        },
        {
          "type": "text",
          "id": "link_text",
          "label": "Button Text",
          "default": "Shop Now"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero V2 (Dual)",
      "blocks": [
        {
          "type": "banner",
          "settings": {
            "title": "Essential Gear",
            "subtitle": "Best Sellers"
          }
        },
        {
          "type": "banner",
          "settings": {
            "title": "Nursery Favorites",
            "subtitle": "Cozy Comfort"
          }
        }
      ]
    }
  ]
}
{% endschema %}
