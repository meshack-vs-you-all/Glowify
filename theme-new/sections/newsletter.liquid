<div class="newsletter-section section section--gray section--compact" id="shopify-section-{{ section.id }}">
  <div class="page-width">
    <div class="newsletter-section__content">
      {%- if section.settings.heading != blank -%}
        <h2 class="newsletter-section__title">{{ section.settings.heading }}</h2>
      {%- endif -%}
      
      {%- if section.settings.text != blank -%}
        <p class="newsletter-section__text">{{ section.settings.text }}</p>
      {%- endif -%}

      {%- form 'customer', class: 'newsletter-form' -%}
        <input type="hidden" name="contact[tags]" value="newsletter">
        <div class="newsletter-form__wrapper">
          <input 
            type="email" 
            name="contact[email]" 
            class="newsletter-form__input"
            placeholder="{{ 'general.newsletter_form.email_placeholder' | t }}"
            required
            aria-label="{{ 'general.newsletter_form.email_placeholder' | t }}"
          >
          <button type="submit" class="button button--primary newsletter-form__button">
            {{ section.settings.button_label | default: 'Subscribe' }}
          </button>
        </div>
        {%- if form.posted_successfully? -%}
          <p class="newsletter-form__success">{{ 'general.newsletter_form.success' | t }}</p>
        {%- endif -%}
      {%- endform -%}
    </div>
  </div>
</div>

<style>
  .newsletter-section__content {
    text-align: center;
    max-width: 600px;
    margin: 0 auto;
  }

  .newsletter-section__title {
    font-size: var(--font-size-h2-mobile);
    line-height: var(--line-height-h2-mobile);
    margin-bottom: var(--space-lg);
  }

  @media (min-width: 768px) {
    .newsletter-section__title {
      font-size: var(--font-size-h2-desktop);
      line-height: var(--line-height-h2-desktop);
    }
  }

  .newsletter-section__text {
    font-size: var(--font-size-body-large);
    line-height: var(--line-height-body-large);
    color: var(--color-text-secondary);
    margin-bottom: var(--space-2xl);
  }

  .newsletter-form__wrapper {
    display: flex;
    gap: var(--space-md);
    max-width: 500px;
    margin: 0 auto;
  }

  .newsletter-form__input {
    flex: 1;
    padding: var(--space-md) var(--space-lg);
    border: 1px solid var(--color-border-gray);
    border-radius: var(--radius-md);
    font-size: var(--font-size-body);
    outline: none;
    transition: border-color var(--duration-fast) var(--ease-in-out);
  }

  .newsletter-form__input:focus {
    border-color: var(--color-accent);
    box-shadow: 0 0 0 3px rgba(124, 152, 133, 0.1);
  }

  .newsletter-form__button {
    white-space: nowrap;
  }

  .newsletter-form__success {
    margin-top: var(--space-md);
    color: var(--color-success);
    font-weight: var(--font-weight-medium);
  }

  @media (max-width: 639px) {
    .newsletter-form__wrapper {
      flex-direction: column;
    }

    .newsletter-form__button {
      width: 100%;
    }
  }
</style>

{% schema %}
{
  "name": "Newsletter",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Stay in the know"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Text",
      "default": "Subscribe to receive updates, access to exclusive deals, and more."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Subscribe"
    }
  ],
  "presets": [
    {
      "name": "Newsletter"
    }
  ]
}
{% endschema %}

