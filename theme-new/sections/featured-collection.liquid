<div class="featured-collection section" id="shopify-section-{{ section.id }}">
  {%- if section.settings.collection != blank -%}
    <div class="page-width">
      {%- if section.settings.title != blank -%}
        <div class="featured-collection__header">
          <h2 class="featured-collection__title">{{ section.settings.title }}</h2>
          {%- if section.settings.show_view_all -%}
            <a href="{{ collections[section.settings.collection].url }}" class="featured-collection__link">
              {{ 'sections.featured_collection.view_all' | t }}
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M5 12H19M19 12L12 5M19 12L12 19" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
              </svg>
            </a>
          {%- endif -%}
        </div>
      {%- endif -%}

      <div class="featured-collection__carousel-wrapper">
        <button class="featured-collection__nav-button featured-collection__nav-button--prev" aria-label="Previous products">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M15 18L9 12L15 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>
        <div class="featured-collection__carousel" data-carousel>
          <div class="featured-collection__carousel-track">
        {%- assign collection = collections[section.settings.collection] -%}
        {%- assign product_limit = section.settings.products_to_show | default: 8 -%}
        
        {%- for product in collection.products limit: product_limit -%}
          {% render 'product-card', product: product %}
        {%- else -%}
          {%- for i in (1..product_limit) -%}
            <div class="product-card">
              <div class="product-card__image-wrapper">
                {{ 'product-1' | placeholder_svg_tag: 'product-card__placeholder' }}
              </div>
              <div class="product-card__content">
                <h3 class="product-card__title">{{ 'products.product.placeholder_title' | t }}</h3>
                <div class="product-card__price">{{ 1999 | money }}</div>
              </div>
            </div>
          {%- endfor -%}
        {%- endfor -%}
          </div>
        </div>
        <button class="featured-collection__nav-button featured-collection__nav-button--next" aria-label="Next products">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M9 18L15 12L9 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>
      </div>
    </div>
  {%- else -%}
    {%- comment -%} Default featured collection when not configured {%- endcomment -%}
    <div class="page-width">
      <div class="featured-collection__header">
        <h2 class="featured-collection__title">{{ section.settings.title | default: 'Featured Products' }}</h2>
        <a href="{{ routes.all_products_collection_url }}" class="featured-collection__link">
          {{ 'sections.featured_collection.view_all' | t }}
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M5 12H19M19 12L12 5M19 12L12 19" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
          </svg>
        </a>
      </div>

      <div class="featured-collection__carousel-wrapper">
        <button class="featured-collection__nav-button featured-collection__nav-button--prev" aria-label="Previous products">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M15 18L9 12L15 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>
        <div class="featured-collection__carousel" data-carousel>
          <div class="featured-collection__carousel-track">
        {%- assign default_collection = collections.all | default: collections['all'] -%}
        {%- if default_collection != blank -%}
          {%- for product in default_collection.products limit: 8 -%}
            {% render 'product-card', product: product %}
          {%- endfor -%}
        {%- else -%}
          {%- comment -%} Show placeholder products if no collection exists {%- endcomment -%}
          {%- for i in (1..4) -%}
            <div class="product-card">
              <div class="product-card__image-wrapper">
                {{ 'product-1' | placeholder_svg_tag: 'product-card__placeholder' }}
              </div>
              <div class="product-card__content">
                <h3 class="product-card__title">{{ 'products.product.placeholder_title' | t }}</h3>
                <div class="product-card__price">{{ 1999 | money }}</div>
              </div>
            </div>
          {%- endfor -%}
        {%- endif -%}
          </div>
        </div>
        <button class="featured-collection__nav-button featured-collection__nav-button--next" aria-label="Next products">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M9 18L15 12L9 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>
      </div>
    </div>
  {%- endif -%}
</div>

<style>
  .featured-collection {
    padding-top: var(--space-4xl);
  }

  .featured-collection__header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--space-3xl);
    flex-wrap: wrap;
    gap: var(--space-md);
  }

  .featured-collection__title {
    font-size: var(--font-size-h2-mobile);
    line-height: var(--line-height-h2-mobile);
    margin: 0;
  }

  @media (min-width: 768px) {
    .featured-collection__title {
      font-size: var(--font-size-h2-desktop);
      line-height: var(--line-height-h2-desktop);
    }
  }

  .featured-collection__link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
    color: var(--color-text-primary);
    text-decoration: none;
    font-weight: var(--font-weight-medium);
    transition: color var(--duration-fast) var(--ease-in-out);
  }

  .featured-collection__link:hover {
    color: var(--color-accent);
  }

  .featured-collection__carousel-wrapper {
    position: relative;
    margin: 0 calc(-1 * var(--space-md));
    padding: 0 var(--space-md);
  }

  .featured-collection__carousel {
    overflow: hidden;
    position: relative;
  }

  .featured-collection__carousel-track {
    display: flex;
    gap: var(--space-lg);
    transition: transform 0.5s var(--ease-in-out);
    will-change: transform;
  }

  .featured-collection__carousel-track .product-card {
    flex: 0 0 calc(50% - var(--space-lg) / 2);
    min-width: 0;
  }

  @media (min-width: 640px) {
    .featured-collection__carousel-track .product-card {
      flex: 0 0 calc(33.333% - var(--space-lg) * 2 / 3);
    }
  }

  @media (min-width: 1024px) {
    .featured-collection__carousel-track .product-card {
      flex: 0 0 calc(25% - var(--space-lg) * 3 / 4);
    }
  }

  .featured-collection__nav-button {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    z-index: 10;
    background: var(--color-white);
    border: 1px solid var(--color-border-gray);
    border-radius: var(--radius-full);
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all var(--duration-fast) var(--ease-in-out);
    box-shadow: var(--shadow-md);
    color: var(--color-text-primary);
  }

  .featured-collection__nav-button:hover {
    background: var(--color-accent);
    color: var(--color-white);
    border-color: var(--color-accent);
    transform: translateY(-50%) scale(1.1);
  }

  .featured-collection__nav-button--prev {
    left: var(--space-sm);
  }

  .featured-collection__nav-button--next {
    right: var(--space-sm);
  }

  .featured-collection__nav-button:disabled {
    opacity: 0.3;
    cursor: not-allowed;
    pointer-events: none;
  }

  @media (max-width: 639px) {
    .featured-collection__nav-button {
      width: 40px;
      height: 40px;
    }

    .featured-collection__nav-button--prev {
      left: var(--space-xs);
    }

    .featured-collection__nav-button--next {
      right: var(--space-xs);
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const carousel = document.querySelector('[data-carousel]');
    if (!carousel) return;

    const track = carousel.querySelector('.featured-collection__carousel-track');
    const prevButton = carousel.closest('.featured-collection__carousel-wrapper')?.querySelector('.featured-collection__nav-button--prev');
    const nextButton = carousel.closest('.featured-collection__carousel-wrapper')?.querySelector('.featured-collection__nav-button--next');
    
    if (!track || !prevButton || !nextButton) return;

    const cards = track.querySelectorAll('.product-card');
    if (cards.length === 0) return;

    let currentIndex = 0;
    let cardWidth = 0;
    let visibleCards = 1;

    function updateCardWidth() {
      const firstCard = cards[0];
      if (!firstCard) return;
      
      const cardStyle = window.getComputedStyle(firstCard);
      const cardMargin = parseFloat(cardStyle.marginRight) || 0;
      cardWidth = firstCard.offsetWidth + cardMargin;
      
      const containerWidth = carousel.offsetWidth;
      if (window.innerWidth >= 1024) {
        visibleCards = 4;
      } else if (window.innerWidth >= 640) {
        visibleCards = 3;
      } else {
        visibleCards = 2;
      }
      
      updateButtons();
    }

    function updateButtons() {
      const maxIndex = Math.max(0, cards.length - visibleCards);
      prevButton.disabled = currentIndex === 0;
      nextButton.disabled = currentIndex >= maxIndex;
    }

    function scrollToIndex(index) {
      const maxIndex = Math.max(0, cards.length - visibleCards);
      currentIndex = Math.max(0, Math.min(index, maxIndex));
      
      const offset = -currentIndex * cardWidth;
      track.style.transform = `translateX(${offset}px)`;
      updateButtons();
    }

    prevButton.addEventListener('click', () => {
      scrollToIndex(currentIndex - 1);
    });

    nextButton.addEventListener('click', () => {
      scrollToIndex(currentIndex + 1);
    });

    // Update on resize
    let resizeTimeout;
    window.addEventListener('resize', () => {
      clearTimeout(resizeTimeout);
      resizeTimeout = setTimeout(() => {
        updateCardWidth();
        scrollToIndex(currentIndex);
      }, 250);
    });

    // Initialize
    updateCardWidth();
    scrollToIndex(0);
  });
</script>

{% schema %}
{
  "name": "Featured Collection",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Featured Collection"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 2,
      "max": 12,
      "step": 2,
      "default": 8,
      "label": "Products to show"
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "label": "Show 'View all' button",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Featured Collection"
    }
  ]
}
{% endschema %}

